readme = "README.md"
requires-python = ">=3.12.8"
dependencies = [
    "anthropic>=0.50.0",
    "bs4>=0.0.2",
    "fastapi[standard]>=0.115.12",
    "ipython>=9.1.0",
    "lxml>=5.4.0",
    "markdownify>=1.1.0",
    "motor[srv]>=3.7.0",
    "openai>=1.76.0",
    "pandas>=2.2.3",
    "pyjwt>=2.10.1",
    "pytest>=8.3.5",
    "qrcode>=8.1",
    "streamlit>=1.44.1",
]

[tool.uv.workspace]
members = [
    "backend",
]
