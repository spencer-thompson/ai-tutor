{
  "manifest_version": 3,
  "name": "AI Tutor",
  "description": "AI Tutor extension for Canvas.",
  "version": "1.0",
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.instructure.com/*"],
      "js": ["content.bundle.js"]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": ["sidePanel", "storage"]
}
