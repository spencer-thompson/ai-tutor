## Example .env for setup/terraform
# Copy this file to .env and fill in values before running the WSL scripts

# Hetzner API token
HCLOUD_TOKEN="your_hetzner_api_token_here"

# Optional: Terraform variable shorthand (Terraform will pick TF_VAR_ prefixed vars automatically)
TF_VAR_hcloud_token="$HCLOUD_TOKEN"

# Path to your public key inside WSL (defaults to ~/.ssh/id_ed25519.pub)
SSH_PUBLIC_KEY_PATH="$HOME/.ssh/id_ed25519.pub"

# Instance name (optional)
INSTANCE_NAME="aitutor-cx23"

# Use a floating/static IP (true/false)
USE_FLOATING_IP=true

EXISTING_SSH_KEY_ID="AI Tutor Key"